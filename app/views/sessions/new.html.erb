<h2 class='text-center my-5 fs-2'>Sign In</h2>
<div class="card shadow p-3 my-5 d-flex justify-content-center m-auto mw-100 w-50">
  <%= form_with url: sign_in_path, data: { turbo: false } do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
      <%= link_to 'Forgot your password?', password_reset_path %>
    </div>
    <div class="mb-3">
      <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
